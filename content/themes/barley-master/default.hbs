<!DOCTYPE html>
{{! Document Settings }}
<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
{{> favicon}}

{{! Page Meta }}
<title>{{meta_title}}</title>

{{! Styles }}
<link href='http://fonts.googleapis.com/css?family=Oxygen:400,700|Lato:400|Inconsolata:400' rel='stylesheet' type='text/css'>
<link rel="stylesheet" type="text/css" href="{{asset "vendor/vendor.css"}}" />
<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

{{! Responsive Meta Tags }}
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{{ghost_head}}
<meta name="description" content="{{meta_description}}" />

<body class="{{body_class}}">
  {{{customSiteHtml}}}
  {{{body}}}
  {{ghost_foot}}
  {{! Scripts }}
  <script type="text/javascript" src="{{asset "vendor/vendor.js"}}"></script>
  <script type="text/javascript" src="{{asset "js/all.min.js"}}"></script>

  {{!-- {{> google-analytics}} --}}
</body>