<div role='banner' class="header_barley" style="background-image:url('{{#if @blog.cover_image}}{{@blog.cover_image}}{{else}}{{asset "/img/the-wheat-field.jpg"}}{{/if}}')">
  {{#if @blog.logo}}
  <a class="logo_barley" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
  {{/if}}
  <h1 class="blog-title_barley">
    <a title="{{@blog.title}}" href='{{@blog.url}}'>
      {{{@blog.title}}}
    </a>
  </h1>
  <h4 class="blog-subtitle_barley">
    <a title="{{@blog.title}}" href='{{@blog.url}}' class="darker_barley">
      {{@blog.description}}
    </a>
  </h4>
</div>